{
  "name": "service-order-management-backend",
  "version": "1.0.0",
  "description": "Backend for Service Order Management",
  "main": "server.ts",
  "scripts": {
    "start": "ts-node server.ts",
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "start:dev": "nodemon server.ts",
    "build": "tsc",
    "sequelize": "ts-node ./node_modules/.bin/sequelize-cli",
    "migrate": "npx sequelize-cli db:migrate --config ./config/config.cjs"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/multer": "2.0.0",
    "@types/node": "^20.19.10",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
